<!DOCTYPE html>
<html>
<head>
	<title>User List</title>
	<link rel="stylesheet" type="text/css" href="/assets/style.css">
	<link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>
	<h1> User List</h1>  
	<a href="/home">Back</a> |
	<a href="/logout">logout</a>

	<br><br>

	<table border="1" width="400px" >
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Username</th>
			<th>Password</th>
			<th>Email</th>
			<th>Type</th>
		</tr>
		<% for(var i=0; i < uList.length; i++){ %>
		<tr>
			<td><%= uList[i].id %></td>
			<td><%= uList[i].name %></td>
			<td><%= uList[i].username %></td>
			<td><%= uList[i].password %></td>
			<td><%= uList[i].email %></td>
			<td><%= uList[i].utype %></td>
			<td>
				<a href="/home/edit/<%=uList[i].id%>"> EDIT</a> |
				<a href="/home/delete/<%=uList[i].id%>"> DELETE</a>
			</td>
		</tr>
		<% } %>
	</table>
</body>
</html>